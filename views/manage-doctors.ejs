<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Doctors - Healthcare Portal</title>
  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
    
    body {
      font-family: 'Inter', sans-serif;
    }
    
    .glass-effect {
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.85);
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
    }
    
    .card {
      transition: all 0.3s ease;
      border: 1px solid rgba(255, 255, 255, 0.6);
    }
    
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px rgba(31, 38, 135, 0.2);
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #3b82f6, #6366f1);
      transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
      background: linear-gradient(135deg, #2563eb, #4f46e5);
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(59, 130, 246, 0.3);
    }
    
    .btn-danger {
      background: linear-gradient(135deg, #ef4444, #dc2626);
      transition: all 0.3s ease;
    }
    
    .btn-danger:hover {
      background: linear-gradient(135deg, #dc2626, #b91c1c);
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(239, 68, 68, 0.3);
    }
    
    .btn-warning {
      background: linear-gradient(135deg, #f59e0b, #d97706);
      transition: all 0.3s ease;
    }
    
    .btn-warning:hover {
      background: linear-gradient(135deg, #d97706, #b45309);
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(245, 158, 11, 0.3);
    }
    
    .status-pending {
      background: linear-gradient(135deg, #f59e0b, #d97706);
      color: white;
    }
    
    .status-approved {
      background: linear-gradient(135deg, #10b981, #059669);
      color: white;
    }
    
    .status-rejected {
      background: linear-gradient(135deg, #ef4444, #dc2626);
      color: white;
    }
    
    .input-field {
      transition: all 0.2s ease;
    }
    
    .input-field:focus {
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }
    
    /* Modal scrollbar styling */
    .modal-content::-webkit-scrollbar {
      width: 8px;
    }
    
    .modal-content::-webkit-scrollbar-track {
      background: #f1f1f1;
      border-radius: 4px;
    }
    
    .modal-content::-webkit-scrollbar-thumb {
      background: #888;
      border-radius: 4px;
    }
    
    .modal-content::-webkit-scrollbar-thumb:hover {
      background: #555;
    }
    
    /* License preview styles */
    .license-preview {
      max-height: 400px;
      overflow-y: auto;
      border: 1px solid #e5e7eb;
      border-radius: 0.5rem;
      background: #f9fafb;
    }
    
    .pdf-embed {
      width: 100%;
      height: 400px;
      border: none;
    }
    
    .image-preview {
      max-width: 100%;
      max-height: 400px;
      object-fit: contain;
      border-radius: 0.5rem;
    }
    
    .tab-active {
      background: linear-gradient(135deg, #3b82f6, #6366f1);
      color: white;
    }
    
    .tab-inactive {
      background: #f3f4f6;
      color: #6b7280;
    }
  </style>
</head>

<body class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50">
  <!-- Header -->
  <header class="glass-effect shadow-sm sticky top-0 z-10">
    <div class="container mx-auto px-4 py-3 flex justify-between items-center">
      <div class="flex items-center">
        <a href="/adminPage" class="flex items-center hover:opacity-80 transition-opacity">
          <div class="w-10 h-10 rounded-full bg-gradient-to-r from-blue-600 to-indigo-600 flex items-center justify-center mr-3">
            <i class="fas fa-stethoscope text-white text-xl"></i>
          </div>
          <h1 class="text-xl font-bold text-gray-800">Healthcare Portal Admin</h1>
        </a>
      </div>
      <div class="flex items-center space-x-4">
        <div class="flex items-center space-x-2">
          <div class="h-10 w-10 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center">
            <i class="fas fa-user text-white"></i>
          </div>
          <span class="font-medium text-gray-700">Admin</span>
        </div>
        <button onclick="handleLogout()" class="btn-danger px-4 py-2 text-white rounded-lg transition">
          <i class="fas fa-sign-out-alt mr-2"></i>Logout
        </button>
      </div>
    </div>
  </header>

  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
      <div>
        <h1 class="text-2xl font-bold text-gray-800">Manage Doctors</h1>
        <p class="text-gray-600 mt-2">View and manage all registered doctors</p>
      </div>
      <div class="mt-4 md:mt-0">
        <a href="/adminPage" class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
          <i class="fas fa-arrow-left mr-2"></i> Back to Dashboard
        </a>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="glass-effect card rounded-2xl p-6">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Total Doctors</p>
            <h3 class="text-2xl font-bold text-blue-600 mt-1"><%= totalDoctorsCount || 0 %></h3>
          </div>
          <div class="h-12 w-12 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center">
            <i class="fas fa-user-md text-white text-xl"></i>
          </div>
        </div>
      </div>
      
      <div class="glass-effect card rounded-2xl p-6">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Approved</p>
            <h3 class="text-2xl font-bold text-green-600 mt-1"><%= approvedDoctorsCount || 0 %></h3>
          </div>
          <div class="h-12 w-12 bg-gradient-to-r from-green-500 to-emerald-500 rounded-full flex items-center justify-center">
            <i class="fas fa-check-circle text-white text-xl"></i>
          </div>
        </div>
      </div>
      
      <div class="glass-effect card rounded-2xl p-6">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Pending</p>
            <h3 class="text-2xl font-bold text-yellow-600 mt-1"><%= pendingDoctorsCount || 0 %></h3>
          </div>
          <div class="h-12 w-12 bg-gradient-to-r from-yellow-500 to-amber-500 rounded-full flex items-center justify-center">
            <i class="fas fa-clock text-white text-xl"></i>
          </div>
        </div>
      </div>
      
      <div class="glass-effect card rounded-2xl p-6">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Rejected</p>
            <h3 class="text-2xl font-bold text-red-600 mt-1"><%= rejectedDoctorsCount || 0 %></h3>
          </div>
          <div class="h-12 w-12 bg-gradient-to-r from-red-500 to-rose-500 rounded-full flex items-center justify-center">
            <i class="fas fa-times-circle text-white text-xl"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabs -->
    <div class="flex space-x-2 mb-6">
      <button id="allTab" class="tab-active px-6 py-2 rounded-lg font-medium transition-colors">
        All Doctors (<%= totalDoctorsCount || 0 %>)
      </button>
      <button id="approvedTab" class="tab-inactive px-6 py-2 rounded-lg font-medium transition-colors">
        Approved (<%= approvedDoctorsCount || 0 %>)
      </button>
      <button id="pendingTab" class="tab-inactive px-6 py-2 rounded-lg font-medium transition-colors">
        Pending (<%= pendingDoctorsCount || 0 %>)
      </button>
      <button id="rejectedTab" class="tab-inactive px-6 py-2 rounded-lg font-medium transition-colors">
        Rejected (<%= rejectedDoctorsCount || 0 %>)
      </button>
    </div>

    <!-- Search and Filter -->
    <div class="glass-effect card rounded-2xl mb-6 p-4">
      <div class="flex flex-col md:flex-row justify-between gap-4">
        <div class="relative flex-1 max-w-md">
          <input type="text" id="searchInput" placeholder="Search doctors by name, email, specialization..." class="input-field w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none">
          <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
        </div>
        <div class="flex space-x-2">
          <select id="sortSelect" class="border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none">
            <option value="newest">Sort by: Newest</option>
            <option value="oldest">Sort by: Oldest</option>
            <option value="name">Sort by: Name</option>
            <option value="specialization">Sort by: Specialization</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Doctors Table -->
    <div class="glass-effect card rounded-2xl overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50/50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Doctor</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Professional Details</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200/50">
            <% if (doctors && doctors.length > 0) { %>
              <% doctors.forEach(doctor => { %>
                <tr class="hover:bg-blue-50/50 transition-colors" data-doctor-id="<%= doctor.doctorid %>" data-status="<%= doctor.status %>">
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <div class="h-10 w-10 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center mr-3">
                        <i class="fas fa-user-md text-white"></i>
                      </div>
                      <div>
                        <div class="font-medium text-gray-900">Dr. <%= doctor.name %></div>
                        <div class="text-sm text-gray-500">ID: <%= doctor.doctorid %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900"><%= doctor.email %></div>
                    <div class="text-sm text-gray-500"><%= doctor.phone || 'Not provided' %></div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900"><%= doctor.specialization || 'Not specified' %></div>
                    <div class="text-sm text-gray-500"><%= doctor.hospitalName || 'Not specified' %></div>
                    <div class="text-xs text-gray-400"><%= doctor.location || '' %></div>
                  </td>
                  <td class="px-6 py-4">
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= doctor.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : doctor.status === 'approved' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                      <i class="fas <%= doctor.status === 'pending' ? 'fa-clock' : doctor.status === 'approved' ? 'fa-check-circle' : 'fa-times-circle' %> mr-1"></i>
                      <%= doctor.status.charAt(0).toUpperCase() + doctor.status.slice(1) %>
                    </span>
                    <% if (doctor.medicalLicenseUrl) { %>
                      <div class="mt-1 text-xs text-indigo-600">
                        <i class="fas fa-file-medical mr-1"></i> License uploaded
                      </div>
                    <% } %>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex space-x-2">
                      <button onclick="viewDoctor('<%= doctor.doctorid %>')" class="btn-primary px-3 py-1 text-white rounded-lg text-sm transition-colors flex items-center">
                        <i class="fas fa-eye mr-1"></i> View
                      </button>
                      <% if (doctor.status !== 'approved') { %>
                        <form action="/adminPage/approve-doctor/<%= doctor.doctorid %>" method="GET" class="inline">
                          <button type="submit" class="bg-green-600 hover:bg-green-700 px-3 py-1 text-white rounded-lg text-sm transition-colors flex items-center">
                            <i class="fas fa-check mr-1"></i> Approve
                          </button>
                        </form>
                      <% } %>
                      <form action="/adminPage/remove-doctor/<%= doctor.doctorid %>" method="POST" class="inline">
                        <button type="submit" onclick="return confirm('Are you sure you want to remove this doctor? This action cannot be undone.')" class="btn-danger px-3 py-1 text-white rounded-lg text-sm transition-colors flex items-center">
                          <i class="fas fa-trash mr-1"></i> Remove
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="5" class="px-6 py-8 text-center">
                  <i class="fas fa-user-md text-gray-400 text-4xl mb-4"></i>
                  <h3 class="text-lg font-medium text-gray-700">No Doctors Found</h3>
                  <p class="text-gray-500 mt-2">There are no doctors registered in the system.</p>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <% if (doctors && doctors.length > 0) { %>
        <div class="px-6 py-4 border-t border-gray-200/50 flex justify-between items-center">
          <p class="text-sm text-gray-600">Showing <%= doctors.length %> of <%= totalDoctorsCount || 0 %> doctors</p>
          <div class="flex space-x-2">
            <button class="px-3 py-1 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-100 transition-colors">
              <i class="fas fa-chevron-left"></i>
            </button>
            <button class="px-3 py-1 bg-blue-600 text-white rounded-lg">1</button>
            <button class="px-3 py-1 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-100 transition-colors">
              <i class="fas fa-chevron-right"></i>
            </button>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Modal for Doctor Details -->
  <div id="doctorModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50 hidden">
    <div class="glass-effect rounded-2xl shadow-lg w-full max-w-4xl max-h-[90vh] overflow-hidden border border-white/50">
      <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center bg-gradient-to-r from-blue-600 to-indigo-600 text-white">
        <h3 class="text-xl font-semibold">Doctor Details</h3>
        <button id="closeModal" class="text-white hover:text-gray-200 transition-colors">
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
      <div class="p-6 modal-content overflow-y-auto max-h-[calc(90vh-80px)]" id="doctorDetails">
        <!-- Doctor details will be populated here -->
      </div>
    </div>
  </div>

  <script>
    // Tab functionality
    const allTab = document.getElementById('allTab');
    const approvedTab = document.getElementById('approvedTab');
    const pendingTab = document.getElementById('pendingTab');
    const rejectedTab = document.getElementById('rejectedTab');
    const doctorRows = document.querySelectorAll('tbody tr[data-doctor-id]');

    function filterDoctors(status) {
      doctorRows.forEach(row => {
        if (status === 'all' || row.getAttribute('data-status') === status) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    }

    allTab.addEventListener('click', () => {
      allTab.className = 'tab-active px-6 py-2 rounded-lg font-medium transition-colors';
      approvedTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      pendingTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      rejectedTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      filterDoctors('all');
    });

    approvedTab.addEventListener('click', () => {
      allTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      approvedTab.className = 'tab-active px-6 py-2 rounded-lg font-medium transition-colors';
      pendingTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      rejectedTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      filterDoctors('approved');
    });

    pendingTab.addEventListener('click', () => {
      allTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      approvedTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      pendingTab.className = 'tab-active px-6 py-2 rounded-lg font-medium transition-colors';
      rejectedTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      filterDoctors('pending');
    });

    rejectedTab.addEventListener('click', () => {
      allTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      approvedTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      pendingTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      rejectedTab.className = 'tab-active px-6 py-2 rounded-lg font-medium transition-colors';
      filterDoctors('rejected');
    });

    // Search functionality
    const searchInput = document.getElementById('searchInput');
    searchInput.addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase();
      
      doctorRows.forEach(row => {
        const doctorName = row.querySelector('.font-medium').textContent.toLowerCase();
        const doctorEmail = row.querySelector('.text-sm.text-gray-900').textContent.toLowerCase();
        const doctorSpecialization = row.querySelectorAll('.text-sm.text-gray-900')[1]?.textContent.toLowerCase() || '';
        
        if (doctorName.includes(searchTerm) || doctorEmail.includes(searchTerm) || doctorSpecialization.includes(searchTerm)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    });

    // Sort functionality
    const sortSelect = document.getElementById('sortSelect');
    sortSelect.addEventListener('change', function(e) {
      // In a real application, this would make an API call to sort the data
      // For now, we'll just show a message
      console.log('Sorting by:', e.target.value);
    });

    // Modal functionality
    async function viewDoctor(doctorId) {
      // Show loading state
      document.getElementById('doctorDetails').innerHTML = `
        <div class="space-y-4">
          <div class="flex items-center space-x-4">
            <div class="h-20 w-20 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center">
              <i class="fas fa-user-md text-white text-2xl"></i>
            </div>
            <div>
              <h3 class="text-xl font-bold">Loading...</h3>
              <p class="text-gray-600">Fetching doctor details</p>
            </div>
          </div>
          <div class="text-center py-8">
            <i class="fas fa-spinner fa-spin text-blue-600 text-2xl mb-2"></i>
            <p class="text-gray-500">Loading doctor information</p>
          </div>
        </div>
      `;
      
      document.getElementById('doctorModal').classList.remove('hidden');
      
      try {
        const response = await fetch(`/adminPage/doctor-details/${doctorId}`);
        const data = await response.json();
        
        if (data.success) {
          const doctor = data.doctor;
          renderDoctorDetails(doctor);
        } else {
          document.getElementById('doctorDetails').innerHTML = `
            <div class="text-center py-8">
              <i class="fas fa-exclamation-triangle text-red-500 text-3xl mb-4"></i>
              <h3 class="text-lg font-medium text-gray-700">Error Loading Details</h3>
              <p class="text-gray-500 mt-2">${data.message || 'Could not load doctor details'}</p>
            </div>
          `;
        }
      } catch (error) {
        console.error('Error fetching doctor details:', error);
        document.getElementById('doctorDetails').innerHTML = `
          <div class="text-center py-8">
            <i class="fas fa-exclamation-triangle text-red-500 text-3xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-700">Error Loading Details</h3>
            <p class="text-gray-500 mt-2">Network error. Please try again.</p>
          </div>
        `;
      }
    }

    function renderDoctorDetails(doctor) {
      const formattedDate = doctor.createdAt ? new Date(doctor.createdAt).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      }) : 'Not available';
      
      const licenseUploadedAt = doctor.licenseUploadedAt ? new Date(doctor.licenseUploadedAt).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      }) : 'Not uploaded';
      
      // Check if license is PDF or image
      const licenseUrl = doctor.medicalLicenseUrl;
      const isPDF = licenseUrl && licenseUrl.toLowerCase().endsWith('.pdf');
      const isImage = licenseUrl && (licenseUrl.toLowerCase().endsWith('.jpg') || 
                                   licenseUrl.toLowerCase().endsWith('.jpeg') || 
                                   licenseUrl.toLowerCase().endsWith('.png'));
      
      let licensePreviewHTML = '';
      if (licenseUrl) {
        if (isPDF) {
          licensePreviewHTML = `
            <div class="mb-4">
              <h4 class="text-lg font-semibold text-gray-800 mb-2">Medical License Preview</h4>
              <div class="license-preview">
                <iframe src="${licenseUrl}" class="pdf-embed"></iframe>
              </div>
              <div class="mt-2 flex items-center space-x-2">
                <a href="${licenseUrl}" target="_blank" class="text-blue-600 hover:text-blue-800 flex items-center">
                  <i class="fas fa-external-link-alt mr-1"></i> Open in new tab
                </a>
                <span class="text-gray-500">|</span>
                <a href="${licenseUrl}" download class="text-green-600 hover:text-green-800 flex items-center">
                  <i class="fas fa-download mr-1"></i> Download PDF
                </a>
              </div>
            </div>
          `;
        } else if (isImage) {
          licensePreviewHTML = `
            <div class="mb-4">
              <h4 class="text-lg font-semibold text-gray-800 mb-2">Medical License Preview</h4>
              <div class="license-preview flex items-center justify-center p-4">
                <img src="${licenseUrl}" alt="Medical License" class="image-preview">
              </div>
              <div class="mt-2 flex items-center space-x-2">
                <a href="${licenseUrl}" target="_blank" class="text-blue-600 hover:text-blue-800 flex items-center">
                  <i class="fas fa-external-link-alt mr-1"></i> Open full image
                </a>
                <span class="text-gray-500">|</span>
                <a href="${licenseUrl}" download class="text-green-600 hover:text-green-800 flex items-center">
                  <i class="fas fa-download mr-1"></i> Download Image
                </a>
              </div>
            </div>
          `;
        } else {
          licensePreviewHTML = `
            <div class="mb-4">
              <h4 class="text-lg font-semibold text-gray-800 mb-2">Medical License</h4>
              <div class="p-4 bg-gray-100 rounded-lg">
                <p class="text-gray-700">License file uploaded: <a href="${licenseUrl}" target="_blank" class="text-blue-600 hover:text-blue-800">View License</a></p>
                <p class="text-sm text-gray-500 mt-1">Uploaded on: ${licenseUploadedAt}</p>
              </div>
            </div>
          `;
        }
      } else {
        licensePreviewHTML = `
          <div class="mb-4 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
            <div class="flex items-center">
              <i class="fas fa-exclamation-triangle text-yellow-500 mr-2"></i>
              <p class="text-yellow-700">No medical license uploaded</p>
            </div>
          </div>
        `;
      }
      
      // Determine if approve button should be shown
      const approveButtonHTML = doctor.status !== 'approved' ? `
        <form action="/adminPage/approve-doctor/${doctor.doctorid}" method="GET" class="inline">
          <button type="submit" class="bg-green-600 hover:bg-green-700 px-6 py-3 text-white rounded-lg transition-colors duration-200 flex items-center">
            <i class="fas fa-check mr-2"></i> Approve Application
          </button>
        </form>
      ` : '';
      
      document.getElementById('doctorDetails').innerHTML = `
        <div class="space-y-6">
          <!-- Doctor Header -->
          <div class="flex flex-col md:flex-row items-start md:items-center space-y-4 md:space-y-0 md:space-x-6">
            <div class="h-24 w-24 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center flex-shrink-0">
              <i class="fas fa-user-md text-white text-3xl"></i>
            </div>
            <div class="flex-1">
              <h3 class="text-2xl font-bold text-gray-800">Dr. ${doctor.name}</h3>
              <p class="text-gray-600">${doctor.email}</p>
              <div class="flex flex-wrap gap-2 mt-2">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${doctor.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : doctor.status === 'approved' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'}">
                  <i class="fas ${doctor.status === 'pending' ? 'fa-clock' : doctor.status === 'approved' ? 'fa-check-circle' : 'fa-times-circle'} mr-1"></i>
                  ${doctor.status.charAt(0).toUpperCase() + doctor.status.slice(1)}
                </span>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                  <i class="fas fa-id-card mr-1"></i> ID: ${doctor.doctorid}
                </span>
              </div>
            </div>
          </div>
          
          <!-- Doctor Information Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-medium text-gray-700 mb-1">Personal Information</label>
              <p class="text-gray-800"><strong>Gender:</strong> ${doctor.gender || 'Not specified'}</p>
              <p class="text-gray-800"><strong>Phone:</strong> ${doctor.phone || 'Not specified'}</p>
            </div>
            
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-medium text-gray-700 mb-1">Professional Information</label>
              <p class="text-gray-800"><strong>Specialization:</strong> ${doctor.specialization || 'Not specified'}</p>
              <p class="text-gray-800"><strong>Location:</strong> ${doctor.location || 'Not specified'}</p>
            </div>
            
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-medium text-gray-700 mb-1">Hospital Details</label>
              <p class="text-gray-800"><strong>Hospital Name:</strong> ${doctor.hospitalName || 'Not specified'}</p>
            </div>
            
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-medium text-gray-700 mb-1">Account Information</label>
              <p class="text-gray-800"><strong>Registered:</strong> ${formattedDate}</p>
              <p class="text-gray-800"><strong>License Uploaded:</strong> ${licenseUploadedAt}</p>
            </div>
          </div>
          
          <!-- License Preview -->
          ${licensePreviewHTML}
          
          <!-- Action Buttons -->
          <div class="flex flex-wrap gap-4 pt-4 border-t">
            ${approveButtonHTML}
            <form action="/adminPage/remove-doctor/${doctor.doctorid}" method="POST" class="inline">
              <button type="submit" onclick="return confirm('Are you sure you want to remove this doctor? This action cannot be undone.')" class="btn-danger px-6 py-3 text-white rounded-lg transition-colors duration-200 flex items-center">
                <i class="fas fa-trash mr-2"></i> Remove Doctor
              </button>
            </form>
            <button onclick="closeModal()" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200 flex items-center">
              <i class="fas fa-times mr-2"></i> Close
            </button>
          </div>
        </div>
      `;
    }

    function closeModal() {
      document.getElementById('doctorModal').classList.add('hidden');
    }

    const closeModalBtn = document.getElementById('closeModal');
    closeModalBtn.addEventListener('click', closeModal);
    
    // Close modal when clicking outside
    document.getElementById('doctorModal').addEventListener('click', (e) => {
      if (e.target === document.getElementById('doctorModal')) {
        closeModal();
      }
    });

    // Logout
    async function handleLogout() {
      try {
        const response = await fetch('/admin/logout', {
          method: 'POST'
        });
        const data = await response.json();
        if (data.success) {
          window.location.href = '/';
        }
      } catch (error) {
        window.location.href = '/';
      }
    }
  </script>
</body>
</html>